{% if section.blocks.size > 0 %}
  <div class="footer-section">
    <div class="footer-wrapper">
      <div class="footer-top-section mb-20">
        <div class="footer-image-section">
          <div class="logo">
            <img src="{{section.settings.logo | img_url: 'medium'}}" alt="logo">
          </div>
          <div class="social-icons flex">
            <div class="footer-social-icon">
              {% render 'icon' with 'facebook' %}
            </div><div class="footer-social-icon">
              {% render 'icon' with 'twitter' %}
            </div><div class="footer-social-icon">
              {% render 'icon' with 'tiktok' %}
            </div><div class="footer-social-icon">
              {% render 'icon' with 'youtube' %}
            </div>
          </div>
        </div>
        <div class="footer-text-section">
          <div>
            <div class="footer-text-section--text">{{ section.settings.text }}</div>
            <div>
              <a class="footer-text-section--link" href="{{section.settings.url}}">{{ section.settings.link_text }}</a>
            </div>
          </div>
        </div>
      </div>
      <div class="footer-bottom-section">
        {% for block in section.blocks %}
          {% if block.settings.menu.links != blank %}
            <div class="footer-menu-section footer-bottom-section--items">
              <ul>
                <div class="menu-links--title">{{ block.settings.title }}</div>

                {% for link in block.settings.menu.links %}
                  <a class="text-decoration-none" href="{{link.url}}">
                    <li class="menu-links footer-text-color">{{ link.title }}</li>
                  </a>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
          {% if block.settings.ns_heading != blank %}
            <div class="footer-newsletter">
              <div class="text-color">{{ block.settings.ns_heading }}</div>
              <div class="text-color">{{ block.settings.ns_text }}</div>
              {% form 'customer' %}
                <div class=" flex">
                  <input
                    class="news-letter-input button"
                    placeholder="Enter Email Adrress"
                    type="email"
                    name="contact[email]">
              {% endform %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="footer-end">
<p>Â© 2023 Reformation - Theme Clone by Ravi Kiran, All rights reserved. Powered by Shopify</p>
      </div>
    </div>
  </div>
{% endif %}

<style>
  .footer-section {
    padding: 3rem;
    background-color: {{ section.settings.bg_color}}
    ;
    color: {{ section.settings.text_color}}
    ;
  }
  .footer-text-color {
    color: {{ section.settings.text_color}}
    ;
  }
  .footer-text-section--link {
    text-decoration: underline;
    color: white;
    font-size: 1.5rem;
  }
  .footer-text-section--text {
    font-size: 2.4rem;
  }
  .footer-top-section {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }
  .footer-bottom-section {
    display: flex;
    flex-wrap: wrap;
  }
  .footer-bottom-section--items {
    min-width: 20%;
  }
  .menu-links {
    font-size: 1.5rem;
    list-style: none;
  }
  .menu-links--title {
    text-transform: uppercase;
    font-size: 1.4rem;
    margin-bottom: 2rem;
  }
  .news-letter-input {
    background-color: transparent;
    color: white;
    margin: 10px 0;
    border:2px solid white;
    width:20rem;
  }
  .footer-social-icon{
    width: 25px;
    height: 25px;
    margin: 10px;
  }
</style>

{% schema %}
  {
    "name": "Footer",
    "class": "section",
    "tag": "footer",
    "settings": [
      {
        "type": "header",
        "content": "COLOR SCHEME"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      }, {
        "type": "text",
        "id": "text",
        "label": "text"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }, {
        "type": "text",
        "id": "link_text",
        "label": "Link Text"
      }
    ],
    "blocks": [
      {
        "name": "Menu",
        "type": "links",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Links"
          }, {
            "type": "link_list",
            "label": "Menu",
            "id": "menu"
          }
        ]
      }, {
        "name": "Text",
        "type": "text",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "text",
            "id": "subheading",
            "label": "Subheading"
          }
        ]
      }, {
        "name": "Newsletter",
        "type": "newsletter",
        "settings": [
          {
            "type": "text",
            "id": "ns_heading",
            "label": "Heading",
            "default": "Newsletter"
          }, {
            "type": "text",
            "id": "ns_text",
            "label": "Text"
          }
        ]
      }
    ]
  }
{% endschema %}