        "default": 0
      }
    ],
    "blocks": [
      {
        "name": "Text",
        "type": "text-section",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "text",
            "label": "Content"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }, {
            "type": "checkbox",
            "id": "outline",
            "label": "Make Text Outline",
            "default": true
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Scrolling Text"
      }
    ]
  }
{% endschema %}