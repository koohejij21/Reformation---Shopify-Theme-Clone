<div class="page-width list-view-items">
  <div>  <form class="search" action="/search">
        <input
          class="searchBar"
          type="text"
          placeholder="Search"
          name="q"
          value="{{ search.terms | escape }}" />
        <input type="submit" value="Search" />
      </form></div>
  {% if search.results.size>0 %}
   <h2 class="mb-30">Search Results:</h2>
  <div class="search-results grid grid--1-col grid--3-col-desktop">
  {% for item in search.results %}
  {% if item.object_type == 'product' and item.available == true %}
   <div class="grid__item">
      <a href="{{ item.url }}" class="list-view-item">
      {% render 'product-card', product: item %}
    </a>
   </div>
{% endif %}
{% endfor %}
        {% endif %}

</div>
</div>

<style>
  .product-card{
    height:auto;
  }
</style>