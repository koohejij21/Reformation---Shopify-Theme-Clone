        "type": "range",
        "id": "hours",
        "min": 0,
        "max": 24,
        "default": 0,
        "step": 1,
        "label": "Hours"
      }, {
        "type": "range",
        "id": "minutes",
        "min": 0,
        "max": 60,
        "default": 0,
        "step": 1,
        "label": "Minutes"
      }, {
        "type": "header",
        "content": "Section padding"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 150,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 40
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 150,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 40
      }


    ],
    "presets": [
      {
        "name": "Countdown banner"

      }
    ]
  }
{% endschema %}