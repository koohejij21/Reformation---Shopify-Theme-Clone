{% if section.blocks.size > 0 %}
  <div class="gallery-section page-width">
    <div class="grid grid--1-col grid--2-col-desktop">
      {% for block in section.blocks %}
        <div class="grid__item">
          <div class="gallery-section__item">
            <div class="gallery-section__image">
              {% if block.settings.image != blank %}
                {% render 'image', mobileSrc: block.settings.image, desktopSrc: block.settings.image %}
              {% endif %}
            </div>
            <div class="gallery-setion__content flex {{ block.settings.text_position }}">
              <div class="gallery-setion__items">
                {% if block.settings.heading_text != blank %}
                  <h2 class="gallery-section__heading heading-{{ block.id }}">{{ block.settings.heading_text }}</h2>
                {% endif %}
                {% if block.settings.paragraph_text != blank %}
                  <div class="gallery-section__paragraph paragraph-{{ block.id }}">
                    {{ block.settings.paragraph_text }}
                  </div>
                {% endif %}
                {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                  <div class="gallery-section__button">
                    <a class="button button--primary button-{{ block.id }}" href="{{ block.settings.button_link }}">
                      {{ block.settings.button_text }}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% style %}
  {% for block in section.blocks %}
    .heading-{{ block.id }}{
      color: {{ block.settings.heading_text_color }}
      ;
    }
    .paragraph-{{ block.id }}{
      color: {{ block.settings.paragraph_text_color }}
      ;

    }
    .button-{{ block.id }}{
      color: {{ block.settings.button_text_color }}
      ;
      background: {{ block.settings.button_background_color }}
      ;
    }
  {% endfor %}
  .gallery-section__item {
    position: relative;
  }

  .gallery-setion__items {
    position: absolute;
    display: flex;
    flex-direction: column;
    top: 0;
    width: 100%;
    height: 100%;
    left: 0;
    align-items: flex-start;
    justify-content: flex-end;
    padding: 20px;
  }
{% endstyle %}

{% schema %}
  {
    "name": "Gallery section 2",
    "tag": "section",
    "class": "homepage-section",
    "blocks": [
      {
        "name": "Image item",
        "type": "image-item",
        "limit": 2,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "1200 x 800px .jpg recommended"
          },
          {
            "type": "text",
            "id": "heading_text",
            "label": "Heading text"
          },
          {
            "type": "color",
            "id": "heading_text_color",
            "label": "Heading text color",
            "default": "#111111"
          },
          {
            "type": "richtext",
            "id": "paragraph_text",
            "label": "Paragraph text",
            "default": "<p>Lorem Ipsum is simply dummy text of the printing and typesetting industry</p>"
          }, {
            "type": "color",
            "id": "paragraph_text_color",
            "label": "Paragraph text color",
            "default": "#111111"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button text",
            "default": "Shop Now"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }, {
            "type": "color",
            "id": "button_text_color",
            "label": "Button text color",
            "default": "#111111"
          }, {
            "type": "color",
            "id": "button_background_color",
            "label": "Button background color",
            "default": "#FFFFFF"
          }, {
                "type": "select", "id": "text_position", "label": "Text overlay position", "options": [
                  {
                    "value": "align-start justify-start", "label": "Top left"}, {
                    "value": "align-start justify-center", "label": "Top center"}, {
                    "value": "align-start justify-end", "label": "Top right"}, {
                    "value": "align-center justify-start", "label": "Middle left"}, {
                    "value": "align-center justify-center", "label": "Middle center"}, {
                    "value": "align-center justify-end", "label": "Middle right"}, {
                    "value": "align-end justify-start", "label": "Bottom left"}, {
                    "value": "align-end justify-center", "label": "Bottom center"}, {
                    "value": "align-end justify-end", "label": "Bottom right"}
                ], "default": "align-start justify-start"}
        ]

      }
    ],
    "presets": [
      {
        "name": "Gallery section 2"
      }
    ]
  }
{% endschema %}