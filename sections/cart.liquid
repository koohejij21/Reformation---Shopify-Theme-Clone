{% if cart.items.size>0 %}
<div class="cart-container mb-30">

<form method="post" action="/cart/update">
  {% for item in cart.items %}
    <div class="cart-item">
      <div class="cart-item-title">{{ item.product.title }}</div>
      <div class="cart-item-quantity">
        <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" max="100" step="1">
        <input type="hidden" name="id[]" value="{{ item.key }}">
        <input type="submit" name="remove[{{ item.key }}]" value="Remove">
      </div>
      <div class="cart-item-note">
        <label for="note-{{ item.key }}">Add a note:</label>
        <input type="text" id="note-{{ item.key }}" name="note-{{ item.key }}" placeholder="e.g. gift wrapping">
      </div>
    </div>
  {% endfor %}
  <div class="add-product">
    <label for="add-product-id">Add product:</label>
    <input type="text" id="add-product-id" name="add-product-id" placeholder="Product ID">
    <input type="number" name="add-product-quantity" min="1" value="1">
    <input type="submit" value="Add">
  </div>
  <input type="submit" name="update" value="Update Cart">
</form>

</div>
{% else %}
  <div class="center mb-30">
    <h1>Your cart is empty
      </h1>
      <p>Ready to find your new favorite products?
      </p>
      <div><a href="/"><button class="button button--black-bordered">Continue Shopping</button></a></div>
  </div>
{% endif %}


<style>
 .cart-item {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.cart-item-title {
  flex: 1;
  margin-right: 20px;
}

.cart-item-quantity {
  display: flex;
  align-items: center;
  margin-right: 20px;
}

.cart-item-quantity input[type="number"] {
  width: 50px;
}

.cart-item-note {
  display: flex;
  align-items: center;
}

.cart-item-note label {
  margin-right: 10px;
}

.add-product {
  display: flex;
  align-items: center;
  margin-top: 20px;
}

.add-product label {
  margin-right: 10px;
}

.add-product input[type="text"] {
  width: 200px;
}


</style>